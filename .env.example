# Copy this file to .env and fill in your values
ADMIN_PASSWORD=your_secure_password_here
PORT=3000
HOST=localhost

# Max file size for photo uploads in MB (default: 200)
MAX_UPLOAD_MB=200
# Max file size for background images in MB (default: 20)
MAX_BACKGROUND_MB=20

# Data directory for uploads, backgrounds, and galleries.json
# Leave unset for bare-metal installs (defaults to the project directory)
# Docker: set to /data and mount a volume there (see docker-compose.yml)
# DATA_DIR=/data
