# Copy this file to .env and fill in your values
ADMIN_PASSWORD=your_secure_password_here
PORT=3000

# Max file size for photo uploads in MB (default: 200)
MAX_UPLOAD_MB=200
# Max file size for background images in MB (default: 20)
MAX_BACKGROUND_MB=20

# Host path for persistent gallery data (Docker only)
# Set to wherever you want uploads, backgrounds, and gallery metadata stored on the host
#   e.g. GALLERY_DIR=/mnt/appdata/metransfer  or  GALLERY_DIR=./data
# Bare-metal installs: leave this unset
GALLERY_DIR=./data

# Set to 1 if running behind a reverse proxy (Nginx, Caddy, Traefik, etc.)
# This enables X-Forwarded-For / X-Forwarded-Proto header trust so rate limiting
# and HTTPS detection use the real client IP and protocol.
# Set to 0 (or leave unset) for direct internet exposure without a proxy.
# Docker Compose default: 1
TRUST_PROXY=1
